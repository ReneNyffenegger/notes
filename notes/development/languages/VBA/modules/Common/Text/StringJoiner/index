$ VBA class: StringJoiner - join strings on a given separator

code {
option explicit

sub testStringJoiner() ' {

    dim sj as stringJoiner : set sj = new StringJoiner

    sj.init(", ")

    sj.add("foo")
    sj.add("bar")
    sj.add("baz")

    debug.print(sj)

end sub ' }
code }

