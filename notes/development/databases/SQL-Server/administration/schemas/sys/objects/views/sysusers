$ SQL Server: sys.sysusers
@ sys.sysusers

code {
select
   name,
   status,
   hasdbaccess,
   islogin,
   isntname,
   isntgroup,
   isntuser,
   issqluser,
   isaliased,
   issqlrole,
   isapprole,
   uid,
   sid,
   gid,
   altuid,
   roles,
   password,
   createdate,
   updatedate
from
   sys.sysusers
order by
   createdate desc
code }
