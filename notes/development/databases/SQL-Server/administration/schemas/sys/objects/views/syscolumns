$ SQL Server: sys.syscolumns
@ sys.syscolumns

code {
select
   sch.name             sch_name,
   obj.name             obj_name,
   obj.type_desc,
   col.name             col_name,
   ust.name             user_type
from
   sys.schemas      sch                                           join
   sys.all_objects  obj on sch.schema_id      = obj.schema_id     join
   sys.syscolumns   col on obj.object_id      = col.id            join
   sys.types        ust on col.xtype          = ust.sys_type
where
   col.name like '%sid'
order by
   sch.name,
   obj.name
code }


