$ Oracle SQL Plan operation BITMAP INDEX SINGLE VALUE

code {
create table tq84_bm (
   flg number(1) not null,
   val number,
   txt varchar2(50)
);

create bitmap index tq84_bm_ix on tq84_bm(flg);

explain plan for
select
   val,
   txt
from
   tq84_bm
where
   flg = 1;

select * from table(dbms_xplan.display(format=>'basic'));
