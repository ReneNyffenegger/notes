$ Oracle SQL Plan operation FILTER

{ Examples

code {
create table tq84_tab(
   nm   number,
   tx   varchar2(10)
);
code }

code {
→ development/databases/Oracle/SQL/statement/verbs/explain for
select
   max(nm) max_nm,
   tx
from
   tq84_tab
group by
   tx
having
   max(nm) in (2,3,4)
;
