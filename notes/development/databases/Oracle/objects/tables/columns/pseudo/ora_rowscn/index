code }

code {
select
   ora_rowscn                   scn_row,
   scn,
   scn_to_timestamp(ora_rowscn) scn_tim,
   tim
from
   rowdependencies_tab
order
   by num;
--
--    SCN_ROW        SCN SCN_TIM                       TIM                          
