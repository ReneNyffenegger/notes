$ Oracle: DBA_VIEWS

code {
select
   viw.owner,
   viw.view_name,
   viw.bequeath,
   viw.text,
   viw.type_text,
   viw.has_sensitive_column,
   viw.default_collation,
   viw.oid_text,
   viw.view_type,
   viw.view_type_owner,
   viw.read_only,
   viw.admit_null,
   viw.container_data,
   viw.containers_default,
   viw.container_map,
   viw.superview_name,
   viw.editioning_view,
   viw.extended_data_link,
   viw.extended_data_link_map,  
       --
   viw.text_length,
   viw.type_text_length,
   viw.oid_text_length,
       --
   viw.origin_con_id,
   viw.pdb_local_only
from
   dba_views viw
where
   viw.owner     =  user    and
   viw.view_name = 'FOO_V'
code }

