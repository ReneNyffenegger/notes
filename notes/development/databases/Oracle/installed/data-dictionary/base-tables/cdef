        '???'
    ) type,
    case bitand(defer,64) when 64 then 'ALWAYS'         else  'CONDITIONAL' end,
    case bitand(defer, 8) when  8 then 'GENERATED NAME' else  'USER NAME'   end
from
   sys.cdef$;
