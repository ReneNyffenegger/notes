$ Oracle: COL$
@ col$

code {
select
   own.name owner,
   obj.name obj_name,
   col.name col_name,
   col.type#,
   col.length,
   col.precision#,
   col.scale,
   col.null$,
   col.deflength,
   col.default$,
   col.intcol#,
   col.property,
   case when bitand(col.property, 16) = 16 then 'hidden'    end hidden   , -- is this correct?
   case when bitand(col.property, 32) = 32 then 'invisible' end invisible, -- is this correct?
   col.charsetid,
   col.charsetform,
   col.evaledition#,
   col.unusablebefore#,
   col.unusablebeginning#,
   col.acdrrescol#,
   col.collid,
   col.collintcol#,
   col.fixedstorage,
   col.spare1, col.spare2, col.spare3, col.spare4, col.spare5, col.spare6, col.spare7, col.spare8, col.spare9, col.spare10, col.spare11, col.spare12, col.spare13
from
   sys.obj$       obj                               join
   sys.user$      own  on obj.owner# = own.user#    join
   sys.col$       col  on obj.obj#   = col.obj#
code }

sa:

  → development/databases/Oracle/installed/data-dictionary/base-tables/col_usage[`col_usage$`]

  → development/databases/Oracle/objects/tables/columns[Columns]
