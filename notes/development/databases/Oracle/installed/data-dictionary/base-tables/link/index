$ Oracle: SYS.LINK$
@ link$

code {
select
   lnk.authpwd,
   lnk.authpwdx,
   lnk.authusr,
   lnk.ctime,
   lnk.flag,
   lnk.host,
   lnk.name,
   lnk.owner#,
   lnk.password,
   lnk.passwordx,
   lnk.userid
from
   SYS.link$ lnk;
code }

