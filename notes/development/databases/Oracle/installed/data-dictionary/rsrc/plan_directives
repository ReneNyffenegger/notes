$ Oracle: DBA_RSRC_PLAN_DIRECTIVES
@ dba_rsrc_plan_directives

code{
select
   pld.active_sess_pool_p1,
   pld.comments,

   pld. cpu_p1, pld.cpu_p2 , pld. cpu_p3, pld. cpu_p4, pld. cpu_p5, pld. cpu_p6, pld. cpu_p7, pld. cpu_p8,
   pld.mgmt_p1, pld.mgmt_p2, pld.mgmt_p3, pld.mgmt_p4, pld.mgmt_p5, pld.mgmt_p6, pld.mgmt_p7, pld.mgmt_p8,

   pld.group_or_subplan,
   pld.mandatory,

   pld.max_est_exec_time,
   pld.max_idle_blocker_time,
   pld.max_idle_time,
   pld.max_utilization_limit,

   pld.parallel_degree_limit_p1,
   pld.parallel_queue_timeout,
   pld.parallel_server_limit,
   pld.parallel_stmt_critical,
   pld.parallel_target_percentage,

   pld.plan,
   pld.pq_timeout_action,
   pld.queueing_p1,
   pld.session_pga_limit,
   pld.status,

   pld.switch_elapsed_time,
   pld.switch_estimate,
   pld.switch_for_call,
   pld.switch_group,
   pld.switch_io_logical,
   pld.switch_io_megabytes,
   pld.switch_io_reqs,
   pld.switch_time,
   pld.switch_time_in_call,

   pld.type,
   pld.undo_pool,
   pld.utilization_limit
from
   sys.dba_rsrc_plan_directives pld;
code }

