$ Oracle: V$SES_OPTIMIZER_ENV, V$SYS_OPTIMIZER_ENV, V$SQL_OPTIMIZER_ENV

code {
select
   name,
   value,
   isdefault,
   sql_feature
from
   v$ses_optimizer_env
where
   sid = sys_context('userenv', 'sid')
order by
   lower(replace(name, '_'));
code }
 
code {
select * from v$sys_optimizer_env;  
code }

code {
select * from v$sql_optimizer_env;
code }

