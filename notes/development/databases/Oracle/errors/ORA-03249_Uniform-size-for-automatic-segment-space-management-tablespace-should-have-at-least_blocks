$ ORA-03249: Uniform size for automatic segment space management tablespace should have at least … blocks

code {
create tablespace tq84_sf_perm_lmt_uni32_auto
   datafile '&db_files_path/tq84_sf_perm_lmt_uni32_auto.dbf'    size 4M autoextend off
   extent        management local uniform size 32K   -- 4 blocks of 8kb
;
code }

