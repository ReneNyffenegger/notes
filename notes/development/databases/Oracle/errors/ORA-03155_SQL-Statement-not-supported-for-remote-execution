$ ORA-03155: SQL statement not supported for remote execution

On remote database:
code {
create table tq84_03155 (foo varchar2(10));
code }

On local database:
code {
insert into tq84_03155 @ db_link
  with t as (select 'xx' foo from dual)
select
  'h' || foo
from
   t;
code }

