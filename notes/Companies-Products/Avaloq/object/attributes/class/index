  Remove a classifications and classes:
code {
declare
   classes_to_remove     obj_class_admin#.t_remv_tab := t_number9_varray(9409, 10002, 22);
   classifs_to_remove    obj_class_admin#.t_temv_tab := t_number9_varray(8888);
begin

   session#.open_session;

   obj_class_admin#.remv_classif_class_list(
     i_class_remv_list    => classes_to_remove,
     i_classif_remv_list  => classifs_to_remove
   );

end;
code }

